@page
@model SubmitFeedbackModel
@{
    ViewData["Title"] = "Submit Feedback";
}

<div class="feedback-container">
    <h1 class="page-title">Submit Feedback</h1>
    <p class="page-subtitle">Share your feedback about the course and teaching quality</p>
    
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">@Model.SuccessMessage</div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }
    
    <form method="post" class="feedback-form">
        <div class="form-group">
            <label for="course">Select Course</label>
            <select class="form-control" id="course" name="CourseId" required>
                <option value="">Choose a course</option>
                @foreach (var course in Model.Courses)
                {
                    <option value="@course.Id">@course.Name - @course.FacultyName</option>
                }
            </select>
        </div>
        
        <div class="form-group">
            <label>Teaching Quality Rating</label>
            <div class="star-rating">
                <input type="radio" id="star5" name="Rating" value="5" required />
                <label for="star5" title="5 stars">★</label>
                <input type="radio" id="star4" name="Rating" value="4" />
                <label for="star4" title="4 stars">★</label>
                <input type="radio" id="star3" name="Rating" value="3" />
                <label for="star3" title="3 stars">★</label>
                <input type="radio" id="star2" name="Rating" value="2" />
                <label for="star2" title="2 stars">★</label>
                <input type="radio" id="star1" name="Rating" value="1" />
                <label for="star1" title="1 star">★</label>
            </div>
        </div>
        
        <div class="form-group">
            <label for="comment">Comments</label>
            <textarea class="form-control" id="comment" name="Comment" rows="6" placeholder="Share your thoughts about the course, teaching methods, or any suggestions..." required></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary-aurora btn-block">Submit Feedback</button>
    </form>
</div>
