@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">
        <h2>Login</h2>
        <p class="auth-subtitle">Enter your credentials to access your account</p>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }
        
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="Input.Email" placeholder="student@example.com" required />
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="Input.Password" placeholder="Enter your password" required />
            </div>
            
            <button type="submit" class="btn btn-primary-aurora btn-block">Login</button>
            
            <p class="auth-link">Don't have an account? <a href="/Register">Register here</a></p>
        </form>
    </div>
</div>
